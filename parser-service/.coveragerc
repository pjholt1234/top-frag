[run]
# Include all Go files in the module
source = .

# Exclude test files and generated files
omit = 
    *_test.go
    */vendor/*
    */testdata/*
    */mocks/*
    */docs/*
    */examples/*
    main.go

[report]
# Exclude lines from coverage reporting
exclude_lines =
    # Exclude main function
    func main\(\)
    # Exclude error handling boilerplate
    if err != nil \{
        return err
    \}
    # Exclude panic statements
    panic\(
    # Exclude log statements
    log\.
    # Exclude debug statements
    debug\.
    # Exclude TODO comments
    // TODO
    // FIXME
    # Exclude generated code
    // Code generated by
    // DO NOT EDIT

# Set minimum coverage threshold
fail_under = 70

# Show missing lines in coverage report
show_missing = True

# Precision for coverage percentages
precision = 2 