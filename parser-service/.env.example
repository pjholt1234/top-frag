# Parser Service Configuration
# Environment variables with PARSER_ prefix will override config.yaml values

# Server Configuration
PARSER_SERVER_PORT=8080
PARSER_SERVER_READ_TIMEOUT=30s
PARSER_SERVER_WRITE_TIMEOUT=30s
PARSER_SERVER_IDLE_TIMEOUT=60s
PARSER_SERVER_API_KEY=

# Parser Configuration
PARSER_MAX_CONCURRENT_JOBS=3
PARSER_PROGRESS_INTERVAL=5s
PARSER_MAX_DEMO_SIZE=1073741824
PARSER_TEMP_DIR=/tmp/parser-service

# Batch Processing Configuration
PARSER_BATCH_GUNFIGHT_EVENTS_SIZE=100
PARSER_BATCH_GRENADE_EVENTS_SIZE=50
PARSER_BATCH_DAMAGE_EVENTS_SIZE=200
PARSER_BATCH_ROUND_EVENTS_SIZE=100
PARSER_BATCH_RETRY_ATTEMPTS=3
PARSER_BATCH_RETRY_DELAY=1s
PARSER_BATCH_HTTP_TIMEOUT=30s

# Logging Configuration
PARSER_LOGGING_LEVEL=info
PARSER_LOGGING_FORMAT=json
PARSER_LOGGING_FILE=logs/service.log
PARSER_LOGGING_ERROR_FILE=logs/errors.log

# Database Configuration
PARSER_DATABASE_HOST=localhost
PARSER_DATABASE_PORT=3306
PARSER_DATABASE_USER=
PARSER_DATABASE_PASSWORD=
PARSER_DATABASE_DBNAME=
PARSER_DATABASE_CHARSET=utf8mb4
PARSER_DATABASE_MAX_IDLE=10
PARSER_DATABASE_MAX_OPEN=100
PARSER_DATABASE_CLEANUP_ON_FINISH=true
